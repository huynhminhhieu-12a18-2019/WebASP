<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] </title>
    <link href="~/admins/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/users/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/users/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/users/css/owl.carousel.css">
    <link rel="stylesheet" href="~/users/style.css">
    <link rel="stylesheet" href="~/users/css/responsive.css">
</head>

<body>
    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="user-menu">
                        <ul>
                            <li><a href="~/users/#"><i class="fa fa-user"></i> My Account</a></li>
                            @*<li><a href="~/users/#"><i class="fa fa-heart"></i> Wishlist</a></li>*@
                            <li><a asp-controller="Home" asp-action="Cart"><i class="fa fa-user"></i> My Cart</a></li>
                            @if (@ViewData["TaiKhoan"] != null)
                            {
                                <li><a asp-controller="Home" asp-action="Logout"><i class="fa fa-user"></i> Logout</a></li>
                            }
                            else
                            {
                                <li><a asp-controller="Home" asp-action="Login"><i class="fa fa-user"></i> Login</a></li>
                            }


                        </ul>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="header-right">
                        <ul class="list-unstyled list-inline">
                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="~/users/#"><span class="key">currency :</span><span class="value">USD </span><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="~/users/#">USD</a></li>
                                    <li><a href="~/users/#">INR</a></li>
                                    <li><a href="~/users/#">GBP</a></li>
                                </ul>
                            </li>

                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="~/users/#"><span class="key">language :</span><span class="value">English </span><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="~/users/#">English</a></li>
                                    <li><a href="~/users/#">French</a></li>
                                    <li><a href="~/users/#">German</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>  @*End header area*@

    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a asp-controller="Home" asp-action="Index"><img src="~/users/img/logo.png"></a></h1>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="shopping-item">
                        <a asp-controller="Home" asp-action="Cart">Cart @*- <span class="cart-amunt">$100</span>*@ <i class="fa fa-shopping-cart"></i> <span class="product-count">2</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>  @*End site branding area*@

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (@ViewData["Title"] == "Trang chủ")
                        {
                            <li class="active"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li><a asp-action="AllProducts" asp-controller="Home">Tất cả sản phẩm</a></li>
                            <li><a asp-action="AllProducts" asp-controller="Home">Danh mục sản phẩm</a></li>
                        }
                        @if (@ViewData["Title"] == "Sản phẩm")
                        {
                            <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li class="active"><a asp-action="AllProducts" asp-controller="Home">Tất cả sản phẩm</a></li>
                            <li><a asp-action="AllProducts" asp-controller="Home">Danh mục sản phẩm</a></li>
                        }
                        @if (@ViewData["Title"] == "Giỏ hàng")
                        {
                            <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li><a asp-action="AllProducts" asp-controller="Home">Tất cả sản phẩm</a></li>
                            <li><a asp-action="AllProducts" asp-controller="Home">Danh mục sản phẩm</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>  @*End mainmenu area*@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="footer-about-us">
                        <h2>u<span>Stora</span></h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Perferendis sunt id doloribus vero quam laborum quas alias dolores blanditiis iusto consequatur, modi aliquid eveniet eligendi iure eaque ipsam iste, pariatur omnis sint! Suscipit, debitis, quisquam. Laborum commodi veritatis magni at?</p>
                        <div class="footer-social">
                            <a href="~/users/#" target="_blank"><i class="fa fa-facebook"></i></a>
                            <a href="~/users/#" target="_blank"><i class="fa fa-twitter"></i></a>
                            <a href="~/users/#" target="_blank"><i class="fa fa-youtube"></i></a>
                            <a href="~/users/#" target="_blank"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">User Navigation </h2>
                        <ul>
                            <li><a href="~/users/#">My account</a></li>
                            <li><a href="~/users/#">Order history</a></li>
                            <li><a href="~/users/#">Wishlist</a></li>
                            <li><a href="~/users/#">Vendor contact</a></li>
                            <li><a href="~/users/#">Front page</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">Categories</h2>
                        <ul>
                            <li><a href="~/users/#">Mobile Phone</a></li>
                            <li><a href="~/users/#">Home accesseries</a></li>
                            <li><a href="~/users/#">LED TV</a></li>
                            <li><a href="~/users/#">Computer</a></li>
                            <li><a href="~/users/#">Gadets</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-newsletter">
                        <h2 class="footer-wid-title">Newsletter</h2>
                        <p>Sign up to our newsletter and get exclusive deals you wont find anywhere else straight to your inbox!</p>
                        <div class="newsletter-form">
                            <form action="#">
                                <input type="email" placeholder="Type your email">
                                <input type="submit" value="Subscribe">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>  @*End footer top area*@

    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>&copy; 2015 uCommerce. All Rights Reserved. <a href="~/users/http://www.freshdesignweb.com" target="_blank">freshDesignweb.com</a></p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="footer-card-icon">
                        <i class="fa fa-cc-discover"></i>
                        <i class="fa fa-cc-mastercard"></i>
                        <i class="fa fa-cc-paypal"></i>
                        <i class="fa fa-cc-visa"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>  @*End footer bottom area*@
    @*Latest jQuery form server*@
    <script src="~/users/js/jquery.min.js"></script>
    @*Bootstrap JS form CDN*@
    <script src="~/users/js/bootstrap.min.js"></script>
    @*jQuery sticky menu*@
    <script src="~/users/js/owl.carousel.min.js"></script>
    <script src="~/users/js/jquery.sticky.js"></script>

    @*jQuery easing*@
    <script src="~/users/js/jquery.easing.1.3.min.js"></script>

    @*Main Script*@
    <script src="~/users/js/main.js"></script>

    @*Slider*@
    <script type="text/javascript" src="~/users/js/bxslider.min.js"></script>
    <script type="text/javascript" src="~/users/js/script.slider.js"></script>
</body>

</html>