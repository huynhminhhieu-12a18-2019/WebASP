@model WebASP.Models.TaiKhoan
@{
    ViewData["Title"] = "Tài khoản của tôi";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewData["TaiKhoan"] = ViewBag.TaiKhoan;
}
<style>
    input {
        width: 100%;
    }
    select {
        width: 100%;
        height: 40px;
        border: 1px solid #ddd;
    }
</style>
<div class="container" style="margin-top:10px">
    <div class="row">
        <div class="col-md-4">
            <h4>
                <img style=" width: 150px; border-radius:100%;" src="~/img/taikhoan/@Html.DisplayFor(model => model.Anh)" alt="Alternate Text" />
                @Model.HoTen<br>
                            <a style=" margin-left: 27px;" asp-action="ChangePass">  <button class="btn btn-primary" > Đổi mật khẩu</button></a>
                @ViewBag.thongbao
            </h4>
           
        </div>
        <div class="col-md-8">
            <form asp-action="capNhatTaiKhoan" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TaiKhoanId" />
                <input type="hidden" asp-for="Ten" />
                <input type="hidden" asp-for="MK" />
                <input type="hidden" asp-for="LoaiTKId" />
                <input type="hidden" asp-for="TrangThai" />
                <div class="form-group">
                    <label asp-for="HoTen" class="control-label"></label>
                    <input asp-for="HoTen" class="form-control" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DChi" class="control-label"></label>
                    <input asp-for="DChi" class="form-control" />
                    <span asp-validation-for="DChi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NgSinh" class="control-label"></label>
                    <select asp-for="NgSinh" class="form-control">

                        @foreach (var i in ViewBag.ngay)
                        {
                            @if (i == Model.NgSinh)
                            {
                                <option selected value="@i">@i</option>
                            }
                            else
                            {
                                <option value="@i">@i</option>
                            }

                        }
                    </select>
                    <span asp-validation-for="NgSinh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ThSinh" class="control-label"></label>
                    <select asp-for="ThSinh" class="form-control">

                        @foreach (var i in ViewBag.thang)
                        {

                            @if (i == Model.ThSinh)
                            {
                                <option selected value="@i">@i</option>
                            }
                            else
                            {
                                <option value="@i">@i</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="ThSinh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NamSinh" class="control-label"></label>
                    <select asp-for="NamSinh" class="form-control">

                        @foreach (var i in ViewBag.nam)
                        {

                            @if (i == Model.NamSinh)
                            {
                                <option selected value="@i">@i</option>
                            }
                            else
                            {
                                <option value="@i">@i</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="NamSinh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnhFile" class="control-label"></label>
                    <input asp-for="AnhFile" class="form-control" />
                    <span asp-validation-for="AnhFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SDT" class="control-label"></label>
                    <input asp-for="SDT" class="form-control" />
                    <span asp-validation-for="SDT" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                </div>
            </form>
        </div>

    </div>
</div>
