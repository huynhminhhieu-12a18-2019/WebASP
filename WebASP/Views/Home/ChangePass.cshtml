@model WebASP.Models.TaiKhoan
@{
    ViewData["Title"] = "Tài khoản của tôi";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewData["TaiKhoan"] = ViewBag.TaiKhoan;
}

<div class="container" style="margin-top:10px">
    <div class="row">
        <div class="col-md-4">


        </div>
        <div class="col-md-4">
            <form asp-action="ChangePass" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Mật khẩu cũ</label>
                    <input name="MKC" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Mật khẩu mới</label>
                    <input name="MKM" class="form-control" />

                </div>
                <div class="form-group">
                    <label class="control-label">Nhập lại mật khẩu mới</label>
                    <input name="XNMKM" class="form-control" />

                </div>
                @ViewBag.loi
                <div class="form-group">
                    <input style="width: 100%; " type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </form>
            <form asp-action="MyAccount">
                <div class="form-group">
                    <input style="width: 100%; " type="submit" value="Trở về" class="btn btn-primary" />
                </div>
                </form>
</div>
        <div class="col-md-4">


        </div>

    </div>
</div>