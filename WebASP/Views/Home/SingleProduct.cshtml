@model WebASP.Models.SanPham
@{
    ViewData["Title"] = "Trang chi tiết sản phẩm";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shop</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @*<div class="col-md-4">
                    <div class="single-sidebar">
                        <h2 class="sidebar-title">search products</h2>
                        <form action="">
                            <input type="text" placeholder="search products...">
                            <input type="submit" value="search">
                        </form>
                    </div>
                </div>*@

            <div class="col-md-12">
                <div class="product-content-right">
                    <div class="product-breadcroumb">
                        <a href="">Home</a>
                        <a href="">@Html.DisplayFor(model => model.LoaiSP.TenLoai)</a>
                        <a href=""> @Html.DisplayFor(model => model.TenSP)</a>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="product-images">
                                <div class="product-main-img">
                                    <img style="width:400px" src="~/img/sanpham/@Html.DisplayFor(model => model.Anh)" alt="">
                                </div>

                                <div class="product-gallery">
                                    <img src="img/product-thumb-1.jpg" alt="">
                                    <img src="img/product-thumb-2.jpg" alt="">
                                    <img src="img/product-thumb-3.jpg" alt="">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="product-inner">
                                <h2 class="product-name">@Html.DisplayFor(model => model.TenSP)</h2>
                                <div class="product-inner-price">
                                    <ins>@Html.DisplayFor(model => model.DonGia) đ</ins> <del>$100.00</del>
                                </div>

                                <form action="" class="cart">
                                    <div class="quantity">
                                        <input style=" margin-top: 5px;" type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                                    </div>
                                    <button class="add_to_cart_button" type="submit">Add to cart</button>
                                </form>

                                <h2>Mô tả sản phẩm</h2>
                                <p>@Html.DisplayFor(model => model.MoTa)</p>

                            </div>
                        </div>
                    </div>
                    <h2>Sản phẩm tương tự</h2>
                    <div class="product-carousel">
                        @foreach (var item in ViewBag.sanphamtuongtu)
                        {
                        <div class="single-product">
                            <div class="product-f-image">
                                <img src="~/img/sanpham/@item.Anh" alt="">
                                <div class="product-hover">
                                    <a href="~/users/#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                    <a asp-controller="Home" asp-action="SingleProduct" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                </div>
                            </div>

                            <h2><a asp-controller="Home" asp-action="SingleProduct">@item.TenSP</a></h2>

                            <div class="product-carousel-price">
                                <ins>@item.DonGia đ</ins> <del>$100.00</del>
                            </div>
                        </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
