@model WebASP.Models.LoaiSP

@{
    ViewData["Title"] = "Xóa loại sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["TaiKhoan"] = ViewBag.TaiKhoan;
}

<h1>Xóa loại sản phẩm</h1>

<h3>Bạn có chắc muốn xóa?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TenLoai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenLoai)
