@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["TaiKhoan"] = ViewBag.TaiKhoan;
    ViewData["Title"] = "Trang chủ";
}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Trang chủ</h1>
            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">Số lượng người dùng<p>@ViewBag.slnguoidung</p></div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-body">Số lượng giỏ hàng <p>@ViewBag.slgiohang </p></div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">Số lượng hóa đơn <p>@ViewBag.slhoadon</p></div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-danger text-white mb-4">
                        <div class="card-body">Số lượng sản phẩm <p>@ViewBag.slsanpham</p></div>
                    </div>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Hóa đơn trong tuần
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã hóa đơn</th>
                            <th>Khách hàng</th>
                            <th>Ngày lập</th>
                            <th>Địa chỉ giao</th>
                            <th>SDT giao</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in @ViewBag.hoadon)
                        {
                            <tr>
                                <td>@i.MAHD</td>
                                <td>@i.TaiKhoan.HoTen</td>
                                <td>@i.NgayLap</td>
                                <td>@i.DChiGiaoHang</td>
                                <td>@i.SDTGiaoHang</td>
                                <td>@i.TongTien.ToString("#,##0") VND</td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Số lượng sản phẩm bán trong tháng
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Đơn giá</th>
                            <th>Ảnh</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in @ViewBag.sanphambanchay)
                        {
                            <tr>
                                <td>@i.MASP</td>
                                <td>@i.TenSP</td>
                                <td>@i.DonGia.ToString("#,##0") VND</td>
                                <td> <img style=" width: 50px;" src="~/img/sanpham/@i.Anh" alt="Alternate Text" /> </td>
                                <td>@i.SL</td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Copyright &copy; Your Website 2021</div>
                <div>
                    <a href="~/admins/#">Privacy Policy</a>
                    &middot;
                    <a href="~/admins/#">Terms &amp; Conditions</a>
                </div>
            </div>
        </div>
    </footer>
</div>