@model WebASP.Models.ChiTietHoaDon

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm mới chi tiết hóa đơn</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HoaDonId" class="control-label"></label>
                <select asp-for="HoaDonId" class ="form-control" asp-items="ViewBag.HoaDonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SanPhamId" class="control-label"></label>
                <select asp-for="SanPhamId" class ="form-control" asp-items="ViewBag.SanPhamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SL" class="control-label"></label>
                <input asp-for="SL" class="form-control" />
                <span asp-validation-for="SL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về</a>
</div>

